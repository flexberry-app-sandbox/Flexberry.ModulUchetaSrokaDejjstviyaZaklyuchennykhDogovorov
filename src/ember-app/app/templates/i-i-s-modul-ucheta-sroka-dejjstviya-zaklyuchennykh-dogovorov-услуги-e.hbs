<h3 class="ui header">{{t "forms.i-i-s-modul-ucheta-sroka-dejjstviya-zaklyuchennykh-dogovorov-услуги-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field" data-test-i-i-s-modul-ucheta-sroka-dejjstviya-zaklyuchennykh-dogovorov-услуги-e-наименование="true">
    <label>{{t "forms.i-i-s-modul-ucheta-sroka-dejjstviya-zaklyuchennykh-dogovorov-услуги-e.наименование-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-modul-ucheta-sroka-dejjstviya-zaklyuchennykh-dogovorov-услуга")
      value=model.наименование
      class=(if (v-get validationModel "наименование" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "наименование" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.затрВремя
      class=(if (v-get validationModel "затрВремя" "isInvalid") "error")
      label=(t "forms.i-i-s-modul-ucheta-sroka-dejjstviya-zaklyuchennykh-dogovorov-услуги-e.затрВремя-caption")
      data-test-i-i-s-modul-ucheta-sroka-dejjstviya-zaklyuchennykh-dogovorov-услуги-e-затрВремя=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "затрВремя" "message")}}
  </div>
  <div class="field" data-test-i-i-s-modul-ucheta-sroka-dejjstviya-zaklyuchennykh-dogovorov-услуги-e-едВремени="true">
    <label>{{t "forms.i-i-s-modul-ucheta-sroka-dejjstviya-zaklyuchennykh-dogovorov-услуги-e.едВремени-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-modul-ucheta-sroka-dejjstviya-zaklyuchennykh-dogovorov-ед-времени")
      value=model.едВремени
      class=(if (v-get validationModel "едВремени" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "едВремени" "message")}}
  </div>
</form>
